<div class="explain-title explain-row row-fuild">
  <h3><b><%= request.base_url+"/recruit/#{current_user.id}" %></b></h3>
</div>


<div class="explain-title explain-row">
  <h2>Mga naimbitahan</h2>
</div>
<div class="row-fluid explain-row">
    <% @recruits.each do |recruit| %>
        <div style="display: inline; margin-right: 30px; text-align: center" class="span2">
            <div>
            <%= image_tag "http://graph.facebook.com/#{recruit.uid}/picture?width=200&height=200", class: "user_thumb_small circular", style: "width: 50%" %>
            </div>
            <div>
            <%= link_to recruit.name, "http://facebook.com/#{recruit.uid}" %>
            </div>
        </div>
    <% end %>
</div>
